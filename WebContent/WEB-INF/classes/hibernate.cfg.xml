<?xml version='1.0' encoding='utf-8'?> 
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-configuration/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/gestion_ecole?useSSL=true&amp;serverTimezone=UTC</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="show_sql">false</property>
    <property name="current_session_context_class">thread</property>
    
    <mapping resource="org/gestionecole/beans/Classe.hbm.xml"/>
    <mapping resource="org/gestionecole/beans/Cour.hbm.xml"/>
    <mapping resource="org/gestionecole/beans/Eleve.hbm.xml"/>
    <mapping resource="org/gestionecole/beans/Materiel.hbm.xml"/>
    <mapping resource="org/gestionecole/beans/Matiere.hbm.xml"/>
    <mapping resource="org/gestionecole/beans/Niveau.hbm.xml"/>
    <mapping resource="org/gestionecole/beans/Note.hbm.xml"/>
    <mapping resource="org/gestionecole/beans/Professeur.hbm.xml"/>
    <mapping resource="org/gestionecole/beans/Profil.hbm.xml"/>
    <mapping resource="org/gestionecole/beans/TypeMateriel.hbm.xml"/>
    <mapping resource="org/gestionecole/beans/TypeProf.hbm.xml"/>
    <mapping resource="org/gestionecole/beans/User.hbm.xml"/>
  </session-factory>
</hibernate-configuration>