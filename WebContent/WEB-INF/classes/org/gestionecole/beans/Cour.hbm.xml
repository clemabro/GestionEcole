<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.gestionecole.beans.Cour" table="cour">
    <id name="id" type="int" column="idCour">
      <generator class="native"/>
    </id>
    <property name="intitule" type="string" not-null="false" />
    <set name="materiel">
		<key  column="idMatiere" not-null="true"/>
        <one-to-many class="org.gestionecole.beans.Matiere"/>
	</set>
  </class>
</hibernate-mapping>